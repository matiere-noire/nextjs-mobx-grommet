root = true
charset = utf-8

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx}]
indent_style = tab
indent_size = 4

[*.{css,scss}]
indent_style = space
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.gradle]
indent_size = 4
